---
import Layout from '../layouts/Layout.astro';
export const prerender = true;
---

<Layout title="お問い合わせ | よろずや本舗">
  <section class="px-4 py-10 max-w-6xl mx-auto">
    <h1 class="text-2xl font-semibold mb-4">お問い合わせ/Contact Form</h1>
    <p class="mb-10 text-gray-700">
      ご相談・ご依頼など、お気軽にお問い合わせください。
    </p>

    <form
      name="contact"
      method="POST"
      action="/thanks"
      data-netlify="true"
      netlify-honeypot="bot-field"
      class="bg-white shadow border rounded-xl p-6"
    >
      <input type="hidden" name="form-name" value="contact" />
      <p class="hidden"><label>Do not fill: <input name="bot-field" /></label></p>

      <div class="mb-4">
        <label for="name" class="block font-medium">お名前/Name</label>
        <input id="name" name="name" required class="w-full border rounded px-3 py-2" />
      </div>

      <div class="mb-4">
        <label for="email" class="block font-medium">メールアドレス/Email</label>
        <input id="email" name="email" type="email" required class="w-full border rounded px-3 py-2" />
      </div>

      <div class="mb-4">
        <label for="subject" class="block font-medium">件名/Subject</label>
        <input id="subject" name="subject" class="w-full border rounded px-3 py-2" />
      </div>

      <div class="mb-6">
        <label for="message" class="block font-medium">メッセージ/Message</label>
        <textarea id="message" name="message" required class="w-full border rounded px-3 py-2 min-h-[160px]"></textarea>
      </div>

      <button type="submit" class="rounded-full bg-blue-600 text-white px-6 py-2 font-semibold">
        送信/Submit
      </button>
    </form>
  </section>
</Layout>
