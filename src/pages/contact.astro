import Layout from '../layouts/Layout.astro';
---

<Layout title="お問い合わせ | よろずや本舗">
    <section class="px-4 py-10 max-w-6xl mx-auto">
    <p class="mb-10 text-gray-700">
      ご相談・ご依頼など、お気軽にお問い合わせください。
    </p>

    <!-- Googleフォームを埋め込む -->
    <div style="margin-top: 2rem;">
      <iframe
        src="https://forms.gle/RFtZfmy87SWzWN1MA"
        width="100%"
        height="1200"
        frameborder="0"
        marginheight="0"
        marginwidth="0"
        style="border: none;"
      >
        読み込んでいます…
      </iframe>
    </div>
  </section>
</Layout>
