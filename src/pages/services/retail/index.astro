---
import Layout from '../../../layouts/Layout.astro';
import Breadcrumb from '../../../components/Breadcrumb.astro';

const breadcrumbLinks = [
  { label: 'ホーム', href: '/' },
  { label: 'サービス紹介', href: '/services' },
  { label: '物販事業', href: '/services/retail' },
];
---

<Layout title="物販事業" breadcrumbLinks={breadcrumbLinks}>
  <Breadcrumb slot="breadcrumb" links={breadcrumbLinks} />

  <h2 class="text-xl font-bold mb-6 text-center">物販事業のカテゴリ一覧</h2>
  <ul class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
    <li><a href="/services/retail/accessories" class="block p-4 rounded shadow hover:bg-gray-50">車用アクセサリ</a></li>
    <li><a href="/services/retail/tools" class="block p-4 rounded shadow hover:bg-gray-50">道具</a></li>
    <li><a href="/services/retail/antiques" class="block p-4 rounded shadow hover:bg-gray-50">骨董品</a></li>
  </ul>
</Layout>
